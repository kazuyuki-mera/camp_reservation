.search
  %ul.search__date
    %li.checkin
      %p チェックイン
      %p
        %input{type: "text", placeholder: "年／月／日"}
    %li.checkout
      %p チェックアウト
      %p
        %input{type: "text", placeholder: "年／月／日"}
    %li.checkbox
      %label
        .check-area
          %input{type: "checkbox", checked: "checked"}
          日付未定
  %ul.search__num
    %li.room
      %p 客室数
      %select
        %option{selected: "selected", value: "1"} 1
        %option{value: "2"} 2
        %option{value: "3"} 3
        %option{value: "4"} 4
    %li.person
      %ul
        %li
          %p.age 大人
          %p.room
            %a
              %span 8
              名
        %li
          %p.age 子供
          %p.room
            %a
              %span 8
              名
  .search__btn
    %input{type: "submit", value: "検索する"}
